pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Building ${env.JOB_NAME} on ${env.JENKINS_URL}"
            }
        }
        stage('Test') {
            steps {
                echo "Testing ${env.JOB_NAME} on ${env.JENKINS_URL}"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying ${env.JOB_NAME} on ${env.JENKINS_URL}"
            }
        }
    }
    post {
        success {
            echo "Good to go!"
        }
        failure {
            echo "Houston, we've had a problem."
        }
    }
}
